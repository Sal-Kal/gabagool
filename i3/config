client.focused          #000000 #000000 #FDF7EB #000000   #000000
client.focused_inactive #000000 #000000 #FDF7EB #000000   #000000
client.unfocused        #FDF7EB #FDF7EB #000000 #000000   #000000   
client.urgent           #2f343a #900000 #ffffff #900000   #900000

# Match the Picture-in-Picture window and make it sticky
for_window [class="firefox-esr" title="Picture-in-Picture"] floating enable
for_window [class="firefox-esr" title="Picture-in-Picture"] sticky enable

